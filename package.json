    "url": "git+https://github.com/rsms/markdown-wasm.git"
  },
  "files": [
    "dist/markdown.wasm",
    "dist/markdown.js",
    "dist/markdown.js.map",
    "dist/markdown.node.js",
    "dist/markdown.node.js.map",
    "dist/markdown.es.js",
    "dist/markdown.es.js.map",
    "markdown.d.ts",
    "README.md",
    "LICENSE"
